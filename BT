pragma solidity ^0.8.0;

/*
  Simple Bank Contract
  ---------------------
  Features:
  1ï¸âƒ£ Deposit money
  2ï¸âƒ£ Withdraw specific amount
  3ï¸âƒ£ Check account balance

  Only the account owner (who deployed the contract) 
  can perform these operations.
*/

contract Bank {

    // Stores the total balance in the account
    uint256 private balance = 0;

    // Stores the address of the account owner
    address public accHolder;

    // ---------------------------------
    // Constructor runs once when the contract is deployed
    // ---------------------------------
    constructor() {
        accHolder = msg.sender;  // msg.sender = deployer's address
    }

    // ---------------------------------
    // ðŸ¦ Deposit Money
    // ---------------------------------
    function deposit() public payable {
        // "payable" allows the function to receive Ether
        require(msg.value > 0, "Deposit amount should be greater than 0.");
        require(msg.sender == accHolder, "You are not the account owner.");

        // Add the deposited amount to balance
        balance += msg.value;
    }

    // ---------------------------------
    // ðŸ’¸ Withdraw Money (Partial Withdraw Supported)
    // ---------------------------------
    function withdraw(uint256 _amount) public {
        // "_amount" is the amount user wants to withdraw (in wei)
        require(msg.sender == accHolder, "You are not the account owner.");
        require(_amount > 0, "Withdraw amount must be greater than 0.");
        require(balance >= _amount, "Not enough balance.");

        // Subtract only the requested amount
        balance -= _amount;

        // Send that amount to the owner's address
        payable(msg.sender).transfer(_amount);
    }

    // ---------------------------------
    // ðŸ’° Show Current Balance
    // ---------------------------------
    function showBalance() public view returns (uint256) {
        require(msg.sender == accHolder, "You are not the account owner.");
        return balance;
    }
}

//Here due to Wei, Ether calculation difference, and js display handling values of integer differently in Remix IDE, when specific amount is withdrawn, we see mathematically wrong output



// SPDX-License-Identifier: MIT
pragma solidity ^0.8.0;

contract StudentData {
    // Structure to store student details
    struct Student {
        uint rollNo;
        string name;
        uint age;
    }

    // Array to store multiple students
    Student[] public students;

    // Event to log student addition
    event StudentAdded(uint rollNo, string name, uint age);

    // Function to add a student
    function addStudent(uint _rollNo, string memory _name, uint _age) public {
        students.push(Student(_rollNo, _name, _age));
        emit StudentAdded(_rollNo, _name, _age);
    }

    // Function to get total number of students
    function getStudentCount() public view returns (uint) {
        return students.length;
    }

    // Function to get student details by index
    function getStudent(uint index) public view returns (uint, string memory, uint) {
        require(index < students.length, "Invalid index");
        Student memory s = students[index];
        return (s.rollNo, s.name, s.age);
    }

    // Fallback function to handle unexpected transactions
    fallback() external payable {
        // This executes if someone sends Ether or calls a non-existing function
    }

    // Receive function to handle plain Ether transfers
    receive() external payable {}
}




// Input :-
// addStudent: 101, anjali, 21
// getStudent: here number of records - 1 should be entered to get students of that position
               // example: entering 0 gives 101 record, entering 1 will give 102, 3 will give 104...



